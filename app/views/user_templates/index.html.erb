<h1> List of users </h1>

<hr>
<form action ="/insert_username">  
  <label for ="username_box">Username</label>
  <input id= "username_box" name="query_username" placeholder="Enter a username">

  <button> Add username </button>
</form>

<hr>


<table border ="1">
  <tr>
    <th>
    ID
    </th>

    <th>
      Username
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_users.each do |a_user| %>
    <tr>
      <td>
      <%= a_user.id%>
      </td>

      <td>
      <%= a_user.username%>
      </td>

      <td>
        <a href ="/users/<%=a_user.username%>"> 
        Show details
      </td>


    </tr>
    <% end %>

  </table>
